@using School.WEB.Helpers
@using School.WEB.Viewmodels
@model SubjectIndex

@{
    ViewBag.Title = "title";
}

<div class="row">
    <br />
    <div class="col-md-10 col-md-offset-1">
        <a href="#" class="btn btn-primary pull-right">Add subject</a>
        <br/><br/>
        <table class="table table-hover table-bordered">
            <tr>
                <th>Id</th>
                <th>Subject name</th>
                <th>Subject teacher</th>
                <th></th>
            </tr>
            @foreach (var subject in Model.Subjects)
            {
                <tr>
                    <td>@subject.Id</td>
                    <td>@subject.SubjectName</td>
                    <td>@subject.GetTeachersName()</td>
                    <td>Update | Delete</td>
                </tr>
            }
        </table>
    </div>
</div>