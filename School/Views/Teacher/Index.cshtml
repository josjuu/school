@using School.WEB.Helpers
@using School.WEB.Viewmodels
@model TeacherIndex

@{
    ViewBag.Title = "title";
}

<div class="row">
    <br/>
    <div class="col-md-10 col-md-offset-1">
        @Html.ActionLink("Add teacher", "Add", "Teacher", new {}, new {@class = "btn btn-primary pull-right"})
        <br/><br/>
        <table class="table table-hover table-bordered">
            <tr>
                <th>Id</th>
                <th>Full name</th>
                <th></th>
            </tr>
            @foreach (var teacher in Model.Teachers)
            {
                <tr>
                    <td>@teacher.Id</td>
                    <td>@teacher.GetFullname()</td>
                    <td>@Html.ActionLink("Edit", "Update", "Teacher", new {id = teacher.Id}) | @Html.ActionLink("Delete", "Delete", "Teacher", new {id = teacher.Id}, new {style = "color: red"})</td>
                </tr>
            }
        </table>
    </div>
</div>