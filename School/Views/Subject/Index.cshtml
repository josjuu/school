@using School.WEB.Helpers
@using School.WEB.Viewmodels
@model SubjectIndex

@{
    ViewBag.Title = "title";
}

<div class="row">
    <br/>
    <div class="col-md-10 col-md-offset-1">
        @Html.ActionLink("Add subject", "Add", "Subject", new {}, new {@class = "btn btn-primary pull-right"})
        <br/><br/>
        <table class="table table-hover table-bordered">
            <tr>
                <th>Id</th>
                <th>Subject name</th>
                <th>Subject teacher</th>
                <th></th>
            </tr>
            @foreach (var subject in Model.Subjects)
            {
                <tr>
                    <td>@subject.Id</td>
                    <td>@subject.SubjectName</td>
                    <td>@subject.GetTeachersName()</td>
                    <td>@Html.ActionLink("Edit", "Update", "Subject", new {id = subject.Id}) | @Html.ActionLink("Delete", "Delete", "Subject", new {id = subject.Id}, new {style = "color: red"})</td>
                </tr>
            }
        </table>
    </div>
</div>