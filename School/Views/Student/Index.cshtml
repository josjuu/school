@using School.WEB.Helpers
@using School.WEB.Viewmodels
@model StudentIndex

@{
    ViewBag.Title = "title";
}

<div class="row">
    <br/>
    <div class="col-md-10 col-md-offset-1">
        @Html.ActionLink("Add student", "Add", "Student", new {}, new {@class = "btn btn-primary pull-right"})
        <br/><br/>
        <table class="table table-hover table-bordered">
            <tr>
                <th>Id</th>
                <th>Full name</th>
                <th></th>
            </tr>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.GetFullname()</td>
                    <td>
                        @Html.ActionLink("Subjects of the student", "Subjects", "Student", new {studentId = student.Id}, new {})
                        | @Html.ActionLink("Edit", "Update", "Student", new {id = student.Id})
                        | @Html.ActionLink("Delete", "Delete", "Student", new {id = student.Id}, new {style = "color: red"})</td>
                </tr>
            }
        </table>
    </div>
</div>